{
    "manifest_version": 2,

    "name": "InFakt Jira Invoicer",
    "description": "Generowanie faktury z timesheet Jiry",
    "version": "1.0",

    "background": {
        "scripts": ["bg.js"],
        "persistent": false
    },
    "browser_action": {
       "default_icon": "icon.png"
    },
    "permissions": [
        "https://api.infakt.pl/",
        "storage",
        "tabs"
    ],
    "optional_permissions": ["http://*/", "https://*/"]
}